    <h5 class="card-title"><%=invoices[pos].rate%></h5>
  </div>
</div>

<div class="card cardb text-white  mb-3 box3" style="max-width: 15rem;">
  <div class="card-header">Fine</div>
  <div class="card-body">
    <h5 class="card-title"><%=invoices[pos].fine%></h5>
  </div>
</div>


<div class="card cardb text-white  mb-3 box4 text-center" style="max-width: 18rem;">
  <div class="card-header">Total Bill</div>
  <div class="card-body">
    <h5 class="card-title"><%=invoices[pos].total_balance%></h5>
    <script>
      var val = '<%=customer.mobile_no%>';
      var loc="/checkout"+val;
      document.write('<a class="btn btn-primary bdrad" href="' + loc + '">Checkout</a>');
    </script>
  </div>
